<Window x:Class="Rayffer.PersonalPortfolio.TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rayffer.PersonalPortfolio.TestWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="30" MinHeight="30"/>
                <RowDefinition MaxHeight="200" MinHeight="200"/>
                <RowDefinition/>
                <RowDefinition MaxHeight="30" MinHeight="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="257*"/>
                <ColumnDefinition Width="414*"/>
                <ColumnDefinition Width="101*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Button" Grid.Column="2" Margin="3" Grid.Row="3" Background="#FFDDDDDD" Click="Button_Click"/>
            <StackPanel x:Name="stackPanelToDrawOn" Margin="0" Grid.Row="1" Grid.ColumnSpan="2"/>
        </Grid>

    </Grid>
</Window>
